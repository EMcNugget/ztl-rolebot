{
  "compilerOptions": {
    "module": "System",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmit": true,
    "outDir": "dist",
    "outFile": "dist/index.js",
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*"]
    },
    "allowJs": true
  },
  "include": ["src/**/*"]
}
